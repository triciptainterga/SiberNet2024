@{
    // Data yang ingin ditampilkan dalam surat kontrak
    var customerName = "John Doe";
    var customerAddress = "Jl. Merdeka No. 12, Jakarta";
    var internetPackage = "100 Mbps - Paket Hemat";
    var price = 350000;
    var contractDate = DateTime.Now;
    var startDate = DateTime.Now.AddDays(7); // Kontrak mulai 7 hari setelah
    var endDate = DateTime.Now.AddYears(1); // Kontrak berakhir 1 tahun setelah
}

